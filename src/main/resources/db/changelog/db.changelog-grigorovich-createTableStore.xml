<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">


    <changeSet author="grigorovich_v" id="createTable-store">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="store"/>
            </not>
        </preConditions>
        <createTable tableName="store">
            <column
                    name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column
                    name="store_name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column
                    name="description" type="varchar(255)">
            </column>
            <column
                    name="address" type="varchar(255)">
            </column>
            <column
                    name="profit" type="bigint">
            </column>
            <column
                    name="profile_id" type="int">
                <!--                <constraints nullable="false" foreignKeyName="STORE_PROFILE_FK" references="profile(id)"/>-->
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
