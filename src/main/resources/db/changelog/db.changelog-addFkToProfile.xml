<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="add_profile_constraint"
               author="zaiceva">
        <addForeignKeyConstraint  baseColumnNames="basket_id"
                                  baseTableName="profile"
                                  constraintName="fk_profile_basket"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  referencedColumnNames="id"
                                  referencedTableName="basket" />
        <addNotNullConstraint columnDataType="bigint"
                              columnName="basket_id"
                              tableName="profile" />
    </changeSet>

</databaseChangeLog>
