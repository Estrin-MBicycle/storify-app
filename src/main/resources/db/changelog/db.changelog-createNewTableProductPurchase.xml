<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">


    <changeSet author="vasili" id="addColumnInPurchase">
        <dropTable tableName="product_purchase"/>

        <createTable tableName="product_purchase">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column
                    name="purchase"
                    type="bigint">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_purchase_product" references="purchase(id)"/>
            </column>
            <column name="product"
                    type="bigint">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_product_purchase" references="product(id)"/>
            </column>
            <column
                    name="count"
                    type="int">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
