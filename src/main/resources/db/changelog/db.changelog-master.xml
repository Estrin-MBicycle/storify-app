<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!--migrations here-->

    <changeSet id="create_table_basket" author="harbachou">
        <createTable tableName="basket">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
<!--            <column name="id_product" type="int">-->
<!--                <constraints nullable="false"/>-->
<!--            </column>-->
<!--            <column name="products_list" type="int">-->
<!--                <constraints nullable="false"/>-->
<!--            </column>-->
        </createTable>
    </changeSet>
  
    <changeSet id="create_table_favorite" author="harbachou">
        <createTable tableName="favorite">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
              </createTable>
    </changeSet>

    <changeSet id="create_table_profile" author="zaiceva">
        <createTable tableName="profile">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(30)" />
            <column name="surname" type="varchar(30)" />
            <column name="town" type="varchar(30)" />
            <column name="adress" type="varchar(30)" />
            <column name="phone" type="varchar(20)">
                <constraints nullable="false" unique="true" />
            </column>
          <column name="basket_id" type="int">
<!--                <constraints foreignKeyName="fk_profile_basket" references="basket(id)" nullable="false"/>-->
            </column>
        </createTable>
    </changeSet>

    <changeSet author="grigorovich_v" id="createTable-store">
        <createTable tableName="store">
            <column
                    name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column
                    name="store_name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column
                    name="description" type="varchar(255)">
            </column>
            <column
                    name="address" type="varchar(255)">
            </column>
            <column
                    name="profit" type="bigint">
            </column>
            <column
                    name="profile_id" type="int">
                <!--                <constraints nullable="false" foreignKeyName="STORE_PROFILE_FK" references="profile(id)"/>-->
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add_nullable_profile_id_store" author="grigorovich_v">
        <addNotNullConstraint
                columnDataType="int"
                columnName="profile_id"
                tableName="store"/>
    </changeSet>

    <changeSet id="create_table_product" author="grigorovich_v">
        <createTable tableName="product">
            <column
                    name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="image" type="varchar(255)">
            </column>
            <column name="description" type="varchar(255)">
            </column>
            <column name="price" type="int">
            </column>
            <column name="enabled" type="boolean">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
