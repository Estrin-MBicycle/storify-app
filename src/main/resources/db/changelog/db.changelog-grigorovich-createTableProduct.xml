<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">


    <changeSet id="createTableProduct" author="grigorovich_v">
        <createTable tableName="product">
            <column name="id"
                    type="bigint"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column
                    name="product_name"
                    type="varchar(50)">
                <constraints nullable="false"
                             unique="true"/>
            </column>
            <column name="image"
                    type="varchar(255)">
            </column>
            <column name="description"
                    type="varchar(255)">
            </column>
            <column name="price"
                    type="int">
            </column>
            <column name="count"
                    type="int">
            </column>
        </createTable>
    </changeSet>

    <changeSet author="zaiceva" id="add_column_product">
        <addColumn tableName="product">
            <column name="deleted"
                    type="boolean">
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>